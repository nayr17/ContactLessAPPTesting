<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountCustomerActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/shop" />

    <TextView
        android:id="@+id/newShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Customer Form"
        android:textSize="25dp"
        android:textColor="#32CD32"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/RelUserInfo"
        android:layout_below="@+id/newShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/editTextCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPersonName"
            android:textColor="#006400"
            android:hint="Enter name"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/editTextCustomerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCustomerName"
            android:ems="15"
            android:hint="Enter address"
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editTextCustomerPhoneNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="number"
            android:textColor="#006400"
            android:hint="Enter phone number"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerAddress"/>

        <EditText
            android:id="@+id/editTextCustomerBarangay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="number"
            android:textColor="#006400"
            android:hint="Enter barangay"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerPhoneNO"/>

        <EditText
            android:id="@+id/editTextCustomerUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="text"
            android:textColor="#006400"
            android:hint="Enter username"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerBarangay"/>
        <EditText
            android:id="@+id/editTextCustomerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textEmailAddress"
            android:textColor="#006400"
            android:hint="Enter email address"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerUsername"/>
        <EditText
            android:id="@+id/editTextCustomerPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPassword"
            android:hint="Enter password"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerEmail"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editTextCustomerConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPassword"
            android:hint="Cofirm password"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerPassword"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnCustomerCreateAccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelUserInfo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textSize="15dp"
        android:background="@drawable/btncreateuser"
        android:textColor="#fff"
        android:onClick="btnCustomerCreateAccount"/>

    <TextView
        android:id="@+id/TextViewGotoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Created? Click here to login"
        android:layout_below="@id/btnCustomerCreateAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#0000EE"
        android:onClick="goToLogin"
        android:textSize="12dp"/>


</RelativeLayout>