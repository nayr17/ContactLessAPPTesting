<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountCustomerActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_width="3dp"
        app:civ_border_color="#32CD32"
        android:src="@drawable/ic_baseline_person_24"/>

    <TextView
        android:id="@+id/newShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Customer Form"
        android:textSize="25dp"
        android:textColor="#32CD32"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/RelUserInfo"
        android:layout_below="@+id/newShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/editTextCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textPersonName"
            android:textColor="#006400"
            android:hint="enter name"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/editTextCustomerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCustomerName"
            android:ems="20"
            android:hint="enter address"
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:textColor="#006400"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editTextCustomerPhoneNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="number"
            android:textColor="#006400"
            android:hint="enter phone number"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerAddress"/>

        <EditText
            android:id="@+id/editTextCustomerBarangay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:textColor="#006400"
            android:hint="enter barangay"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerPhoneNO"/>

        <EditText
            android:id="@+id/editTextCustomerUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:textColor="#006400"
            android:hint="enter username"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerBarangay"/>
        <EditText
            android:id="@+id/editTextCustomerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textEmailAddress"
            android:textColor="#006400"
            android:hint="enter email address"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerUsername"/>
        <EditText
            android:id="@+id/editTextCustomerPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textPassword"
            android:textColor="#006400"
            android:hint="enter password"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerEmail"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editTextCustomerConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textPassword"
            android:textColor="#006400"
            android:hint="cofirm password"
            android:textSize="15dp"
            android:layout_below="@id/editTextCustomerPassword"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnCustomerCreate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelUserInfo"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textSize="15dp"
        android:background="@drawable/btncreateuser"
        android:textColor="#fff"
        android:onClick="btnCustomerCreateAccount"/>

    <TextView
        android:id="@+id/TextViewGotoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Created? Click here to login"
        android:layout_below="@id/btnCustomerCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#0000EE"
        android:onClick="goToLogin"
        android:textSize="12dp"/>


</RelativeLayout>