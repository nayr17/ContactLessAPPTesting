<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@drawable/layout_border">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/customerPic"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:civ_border_color="#000"
                                    app:civ_border_width="3dp"
                                    android:src="@drawable/stop"
                                    android:layout_marginTop="15dp"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customer # 1"
                                    android:layout_below="@id/customerPic"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:padding="5dp"
                                    android:layout_centerHorizontal="true"/>


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date: "
                                    android:textColor="#000"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/textViewDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:text="10/7/2020"
                                    android:textSize="12dp"
                                    android:padding="5dp"
                                    android:background="@drawable/border_radius"
                                    android:textColor="#000"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/date"
                                    android:layout_centerHorizontal="true"/>
                                <TextView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time: "
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    android:layout_below="@id/textViewDate"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/textViewTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="time"
                                    android:layout_below="@id/time"
                                    android:padding="5dp"
                                    android:text="9:02 AM"
                                    android:textSize="12dp"
                                    android:textColor="#000"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/border_radius"
                                    android:layout_centerHorizontal="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/textViewGetCustomerName"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="Name: John Rey J. Malaban"
                                    android:padding="3dp"
                                    android:layout_margin="2dp"
                                    android:textColor="#000"
                                    android:textSize="12dp"
                                    android:background="@drawable/border_radius"/>

                                <TextView
                                    android:id="@+id/textViewGetCustomerAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="3dp"
                                    android:text="Address: blk40 lot123 carmela valley homes talisay city"
                                    android:textSize="12dp"
                                    android:padding="2dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/border_radius"
                                    android:textColor="#000"
                                    android:layout_below="@id/textViewGetCustomerName"/>

                                <TextView
                                    android:id="@+id/textViewGetCustomerPhoneNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="Phone Number: 09071254215"
                                    android:padding="3dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/border_radius"
                                    android:textSize="12dp"
                                    android:textColor="#000"
                                    android:layout_below="@id/textViewGetCustomerAddress"/>


                            </RelativeLayout>

                        </LinearLayout>

</androidx.cardview.widget.CardView>